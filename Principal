    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cronograma de Estudos</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <h1>Gerador de Cronograma de Estudos</h1>
        <label for="materias">Mat√©rias (separadas por v√≠rgula):</label>
        <input type="text" id="materias" placeholder="Ex: Matem√°tica, Portugu√™s">
        
        <label for="dias">Dias Dispon√≠veis:</label>
        <input type="number" id="dias" min="1" value="30">
        
        <label for="tempo">Tempo Di√°rio de Estudo (minutos):</label>
        <input type="number" id="tempo" min="10" value="180">
        
        <button onclick="gerarCronograma()">Gerar Cronograma</button>
        
        <div id="resultado"></div>
    </div>
    
    <script>
        function gerarCronograma() {
            const materiasInput = document.getElementById('materias').value;
            const dias = parseInt(document.getElementById('dias').value);
            const tempoDiario = parseInt(document.getElementById('tempo').value);
            const resultadoDiv = document.getElementById('resultado');
            
            if (!materiasInput) {
                resultadoDiv.innerHTML = '<p style="color:red;">Por favor, insira pelo menos uma mat√©ria.</p>';
                return;
            }
            
            const materias = materiasInput.split(',').map(m => m.trim());
            let cronograma = '';
            
            for (let i = 0; i < dias; i++) {
                cronograma += `<h3>Dia ${i + 1}</h3>`;
                let tempoPorMateria = Math.floor(tempoDiario / materias.length);
                
                materias.forEach(materia => {
                    cronograma += `<p>üìö ${materia} - ‚è≥ ${tempoPorMateria} min</p>`;
                });
            }
            
            resultadoDiv.innerHTML = cronograma;
        }
    </script>
</body>
